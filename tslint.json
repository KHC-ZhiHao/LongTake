{
    "extends": "tslint-config-standard",
    "rules": {
        "ter-indent": [
            true,
            4
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "space-before-function-paren": [
            true,
            "never"
        ],
        "no-floating-promises": [
            false
        ],
        "strict-type-predicates": [
            false
        ]
    },
    "linterOptions": {
        "exclude": [
            "**/node_modules/**"
        ]
    }
}
